{
"version": "2.0.0",
    "tasks": [
        {
        "label": "Build active C++ file",
        "type": "shell",
        "command": "clang++",
        "args": [
            "-std=c++20",                       // Use C++20 standard
            "-g",                               // Include debugging information
            "${file}",                          // Compiles the active file
            "-o",                               // Specifies the output file
            "${fileDirname}/build/${fileBasenameNoExtension}"  // Output path
        ],
            "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compiler task"
        }
    ]
}